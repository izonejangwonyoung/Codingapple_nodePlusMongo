<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

<script>
    $('.delete').click(function (e) {
        $.ajax({
            method: 'DELETE',
            url: '/delete',
            data: {_id: e.target.dataset.id}
        }).done((결과) => {
            $(e.target).parent('li').fadeOut();
            console.log('test')
        }).always(function (xhr,status){
            $("#text").html("요청이 완료되었습니다.!!")
        })
    });
</script>
